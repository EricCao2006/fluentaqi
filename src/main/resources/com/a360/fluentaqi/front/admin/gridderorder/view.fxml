<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<VBox styleClass="styled-container" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.a360.fluentaqi.front.admin.gridderorder.GridderOrderController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label styleClass="styled-title" text="公众监督AQI反馈指派" />
    <HBox spacing="20.0" styleClass="styled-h-box">
        <VBox.margin>
            <Insets left="20.0" right="20.0" />
        </VBox.margin>
        <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
        </padding>
        <Label styleClass="styled-content" text="请输入反馈数据编号：" />
        <TextField fx:id="txt_afId" prefHeight="30.0" prefWidth="200.0" styleClass="styled-text-field" />
        <Button mnemonicParsing="false" onAction="#queryFeedback" styleClass="A-small-button" text="查询" />
    </HBox>
    <ScrollPane hbarPolicy="ALWAYS" styleClass="styled-scroll-pane">
        <VBox.margin>
            <Insets left="20.0" right="20.0" />
        </VBox.margin>
        <TableView fx:id="txt_tableView" styleClass="styled-table">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </ScrollPane>
    <HBox spacing="20.0" styleClass="styled-h-box">
        <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
        </padding>
        <Label styleClass="styled-content" text="请选择要指派的网格员：" />
        <ChoiceBox fx:id="combo_realName" prefWidth="200.0" styleClass="styled-choice-box" />
        <Button mnemonicParsing="false" onAction="#assignGridMember" styleClass="A-small-button" text="指派" />
    </HBox>
   <HBox alignment="CENTER" spacing="40.0">
      <children>
          <Button mnemonicParsing="false" onAction="#getback" styleClass="B-button" text="&lt;返回" />
          <Button fx:id="btnSettings" mnemonicParsing="false" onAction="#showSettingsMenu" styleClass="B-button">
              <graphic>
                  <ImageView fitHeight="24" fitWidth="24">
                      <Image url="@../../icons/settings.png" />
                  </ImageView>
              </graphic>
          </Button>

      </children>
   </HBox>

</VBox>
